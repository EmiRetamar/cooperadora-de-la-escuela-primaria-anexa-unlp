{% extends "backend.twig" %}

{% block content %}
    <div id="exito">
        {{ var }}
    </div>
    <div class="centrado">
        <h1>Alumnos</h1>
    </div>
    <br />
    <div class="table-responsive">
        <table id="tabla" class="table table-hover">
            <thead>
                <tr>
                    <th>Tipo documento</th>
                    <th>NÂº documento</th>
                    <th>Apellido</th>
                    <th>Nombre</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                {% for alumno in alumnos %}
                    <tr>
                        <td> {{ alumno.tipoDocumento }} </td>
                        <td> {{ alumno.numeroDocumento }} </td>
                        <td> {{ alumno.apellido }} </td> 
                        <td> {{ alumno.nombre }} </td>
                        <td>
                            <form action="../Cuota/controlCuotaAlumno" method="post">
                                <input type="hidden" name="idAlumno" value="{{ alumno.id }}">
                                <input type="hidden" name="nombre" value="{{ alumno.nombre }}">
                                <input type="hidden" name="apellido" value="{{ alumno.apellido }}">
                                <button type="submit" class="btn btn-success">
                                    <span class="glyphicon">Gestionar</span>
                                </button>
                            </form>
                        </td>
                    </tr>
                {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}